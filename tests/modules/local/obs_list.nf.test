nextflow_process {

    name "Test Process OBS_LIST"
    script "modules/local/obs_list.nf"
    process "OBS_LIST"

    test("Should run without failures") {
        tag "short"
        when {
            params {
                pulsar = "J1744-1134,J1909-3744"
                utcs = "2023-10-20-17:16:09"
                utce = "2023-10-30-12:29:25"
                project = ""
                obs_csv = ""
                outdir = "$outputDir"
            }
            process {
                """
                input = [
                    params.pulsar,
                    params.utcs,
                    params.utce,
                    params.project,
                    file("none_given"),
                    params.upload,
                    params.psrdb_url,
                    params.psrdb_token,
                    params.ephemeris,
                    params.template,
                    params.outdir,
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.out_csv.get(0)).readLines().size() == 4 },
            )
        }
    }

    test("TPA obs should use fold ephem") {
        tag "short"
        when {
            params {
                pulsar = "J0711+0931"
                utcs = "2020-07-04-09:47:10"
                utce = "2020-07-04-09:47:10"
                project = ""
                obs_csv = ""
                outdir = "$outputDir"
            }
            process {
                """
                input = [
                    params.pulsar,
                    params.utcs,
                    params.utce,
                    params.project,
                    file("none_given"),
                    params.upload,
                    params.psrdb_url,
                    params.psrdb_token,
                    params.ephemeris,
                    params.template,
                    params.outdir,
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.out_csv.get(0)).readLines().size() == 1 },
                { assert path(process.out.out_csv.get(0)).readLines()[0].contains("/fold/") },
            )
        }
    }

}
